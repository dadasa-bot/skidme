local tcs = game:GetService("TextChatService")
local plrs = game:GetService("Players").LocalPlayer
local rs = game:GetService("RunService")

local gui = Instance.new("ScreenGui", gethui and gethui() or game:GetService("CoreGui"))
gui.Name = "screenGui"

-- Create the button
local btn = Instance.new("TextButton", screenGui)  -- Fixed 'screenGui' to 'gui'
btn.Name = "btn"
btn.Text = "Niger: OFF"
btn.Size = UDim2(0, 100, 0, 40)
btn.Position = UDim2(0, 30, 0, 30)
btn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
btn.TextColor3 = Color3.fromRGB(0, 0, 0)
btn.TextScaled = true
btn.Active = true
btn.Draggable = true

-- Add rounded corners to the button
local btnuicorner = Instance.new("UICorner", btn)
btn.CornerRadius = UDim.new(0, 10)

-- Define the btnclicked variable
local btnclicked = false  -- Initialize this variable

-- Button click handler
btn.MouseButton1Click:Connect(function()
    if not btnclicked then  -- Check if it was not clicked yet
        btn.Text = "Niger: |ON"
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
        btnclicked = true  -- Set to true after it's clicked
    else
        btn.Text = "Niger: |OFF"
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16  -- Reset WalkSpeed to default
        btnclicked = false  -- Set back to false when turned off
    end
end)
print("Hi")
